@model TaskManager.Models.RegistrationModel

@{
    ViewBag.Title = "Sign Up";
}

<div class="col-md-4 col-md-offset-4">
    <h2 class="newacc text-center">Create new account</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label inlbl" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter name" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label inlbl" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @*<small class="form-text text-muted">We'll never share your email with anyone else</small>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label inlbl" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PasswordConfirm, new { @class = "control-label inlbl" })
            @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control", placeholder = "Confirm password" })
            @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="subbtn btn btn-primary">Create</button>
        </div>
    }
</div>

