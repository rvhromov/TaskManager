@model TaskManager.Models.EditModel

@{
    ViewBag.Title = "Edit Name";
}

<div class="col-md-4 col-md-offset-4">
    <h2 class="inacc text-center">Edit your name</h2>
    @using (Html.BeginForm(new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="text-danger text-center customerr">@Html.ValidationMessage("EditName")</div>

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label inlbl" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter name" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="subbtn btn btn-primary">Rename</button>
        </div>
    }
</div>

